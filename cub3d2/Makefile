OBJS = ${SRCS:.c=.o}

SRCS =	srcs/ft_cub3d.c srcs/ft_init.c srcs/ft_check_map.c	srcs/ft_check_map2.c srcs/ft_init2.c srcs/ft_list.c srcs/ft_event.c	srcs/ft_raycasting.c srcs/ft_display.c srcs/ft_raycasting_2.c srcs/ft_raycasting_3.c srcs/ft_event_2.c srcs/ft_display_2.c srcs/ft_load_sprite.c srcs/ft_load_sprite_2.c srcs/ft_free_data.c srcs/ft_loop.c srcs/ft_save_img.c

HEADERS = include/cub3d.h include/init.h

CC = clang

FLAGS = -Wall -Wextra -Werror 

FRAMEWORK = -framework OpenGL -framework AppKit

NAME = cub3d

LIB = libft/libft.a mlx/libmlx.a

RM = rm -rf

all: ${NAME}

.c.o:
	${CC} ${FLAGS} -c $< -o ${<:.c=.o}

${NAME}:	${OBJS}
			make -C libft
			make -C mlx
			${CC} -o ${NAME} ${FLAGS} ${FRAMEWORK} ${OBJS} -L. ${LIB}
linux:		${OBJS}
			make -C libft
			${CC} -L ./libft/ -L ./mlx_linux -o cub3d_linux ${OBJS} -lm -lXext -lX11 -lbsd -lft -lmlx

linux_free:	${OBJS}
			make -C libft
			${CC} -L ./libft/ -L ./mlx_linux -fsanitize=address -o cub3d_linux ${OBJS} -lm -lXext -lX11 -lbsd -lft -lmlx

clean:
	make clean -C libft
	make clean -C mlx
	${RM} ${OBJS}

fclean:		clean
	make fclean -C libft
	${RM} ${NAME}

re:		fclean all

.PHONY:	all clean fclean re
